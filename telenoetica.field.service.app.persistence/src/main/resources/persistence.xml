<class>com.telenoetica.jpa.entities.Permission</class>
<class>com.telenoetica.jpa.entities.Role</class>
<class>com.telenoetica.jpa.entities.RolePermission</class>
<class>com.telenoetica.jpa.entities.RoutineVisit</class>
<class>com.telenoetica.jpa.entities.Site</class>
<class>com.telenoetica.jpa.entities.User</class>
<class>com.telenoetica.jpa.entities.UserRole</class>
<properties>
<property name="hibernate.show_sql" value="true"/>
</properties>
</persistence-unit>
</persistence>